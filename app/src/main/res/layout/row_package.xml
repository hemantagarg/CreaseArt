<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardElevation="2sp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/image_viewers"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:padding="@dimen/dp5"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_toRightOf="@+id/image_viewers"
                android:padding="@dimen/dp5">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Madhav"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_size_15" />
                <TextView
                    android:id="@+id/actualprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_name"
                    android:layout_marginTop="@dimen/dp3"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:text=" nj"
                    android:drawableLeft="@drawable/rupeecut"
android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_13"
                    />
                <TextView
                    android:id="@+id/text_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:text=" nj"
                    android:textColor="@color/offer_color"
android:paddingLeft="@dimen/dp10"
                    android:textSize="@dimen/text_size_13"
                    android:layout_alignBaseline="@+id/actualprice"
                    android:layout_alignBottom="@+id/actualprice"
                    android:layout_toRightOf="@+id/actualprice"
                    android:layout_toEndOf="@+id/actualprice" />
                <TextView
                    android:id="@+id/dicountprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/actualprice"
                    android:text="fdsf"
                    android:layout_marginTop="@dimen/dp5"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/rupee"
                    android:textColor="@color/textcolordark"
                    android:textSize="@dimen/text_size_11" />


  <TextView
                    android:id="@+id/specialoffer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dicountprice"
                    android:text="Offers"

                    android:layout_marginTop="@dimen/dp5"
                    android:textStyle="bold"

                    android:textColor="@color/offer_color"
                    android:textSize="@dimen/text_size_11" />
                <TextView
                    android:id="@+id/specialoffertext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dicountprice"
                    android:text="Special Price"
                    android:layout_toRightOf="@+id/specialoffer"
                    android:layout_marginTop="@dimen/dp5"

                    android:paddingLeft="@dimen/dp10"
                    android:textColor="@color/textcolordark"
                    android:textSize="@dimen/text_size_11" />




                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp5" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_header"
            android:alpha=".3"
            android:background="@color/view_color" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
